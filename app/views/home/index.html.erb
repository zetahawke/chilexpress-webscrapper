
<div class="section">
  <div class="row">
    <div class="container">
      <div class="section center-align">
        <div class="row">
          <!-- content -->
          <h3>Ingresa el número del pedido a buscar</h3>
          <%= form_tag("/scrap", method: "post") do %>
            <div class="input-field">
              <input id="key" name="key" type="search" required>
              <label for="key"><i class="material-icons">search</i></label>
              <i class="material-icons">close</i>
            </div>
          <% end %>
          <div class="white left-align" style="color: #9e9e9e;">
            <% unless @packages.blank?%>
              <ul class="collapsible" data-collapsible="accordion">
                <%@packages.each do |p|%>
                  <li>
                    <div class="collapsible-header"><i class="material-icons" style="color: #9e9e9e;">label_outline</i><%= p.track_number%> <div class="right">U/A: <%= Date.parse(p.updated_at.to_s)%></div></div>
                    <div class="collapsible-body">
                      <ul>
                        <li><b>Producto:</b> <%= p.product_name%></li>
                        <li><b>Estado:</b> <%= p.status%></li>
                        <li><b>Servicio:</b> <%= p.service%></li>
                        <li><b>Receptor:</b> <%= p.receptor_key%></li>
                        <li><b>Nombre receptor:</b> <%= p.receptor_name%></li>
                        <li><b>Fecha llegada:</b> <%= p.arrived_date%></li>
                        <li><b>Hora llegada:</b> <%= p.arrived_hour%></li>
                      </ul>
                    </div>
                  </li>
                <%end%>
              </ul>
            <%else%>
              <br>
              <div class="container">
                <h5>No se tienen movimientos de packetes enviados.</h5>
                <p>Ingrese un número de pedido más arriba para obtener información de él</p>
              </div>
              <br>
            <%end%>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


